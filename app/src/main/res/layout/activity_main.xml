<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/num"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="36sp"
        android:gravity="bottom|right"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:textColor="@color/black"
        />

    <View
        android:id="@+id/horizonLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/num"
        app:layout_constraintLeft_toLeftOf="@id/num"
        app:layout_constraintRight_toRightOf="@id/num"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="@id/horizonLine"
        app:layout_constraintLeft_toLeftOf="@id/horizonLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizonLine"
        android:paddingVertical="16dp"
        android:paddingHorizontal="20dp"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <!-- First Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/one"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_background"
                android:text="1"
                android:textSize="30sp"
                android:textColor="@color/white"/>

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/two"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_background"
                android:text="2"
                android:textSize="30sp"
                android:textColor="@color/white"/>

            <Space
                android:layout_width="16dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/three"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_background"
                android:text="3"
                android:textSize="30sp"
                android:textColor="@color/white"/>

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/add"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_background"
                android:text="+"
                android:textSize="30sp"
                android:textColor="@color/white"/>


        </LinearLayout>

        <!-- Spacer View -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!--second row-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/four"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_background"
                android:text="4"
                android:textSize="30sp"
                android:textColor="@color/white"/>

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/five"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_background"
                android:text="5"
                android:textSize="30sp"
                android:textColor="@color/white"/>

            <Space
                android:layout_width="16dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/six"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_background"
                android:text="6"
                android:textSize="30sp"
                android:textColor="@color/white"/>

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/sub"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_background"
                android:text="-"
                android:textSize="30sp"
                android:textColor="@color/white"/>


        </LinearLayout>

        <!-- Spacer View -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- third row   -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/seven"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_background"
                android:text="7"
                android:textSize="30sp"
                android:textColor="@color/white"/>

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/eight"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_background"
                android:text="8"
                android:textSize="30sp"
                android:textColor="@color/white"/>

            <Space
                android:layout_width="16dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/nine"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_background"
                android:text="9"
                android:textSize="30sp"
                android:textColor="@color/white"/>

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/multiply"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_background"
                android:text="*"
                android:textSize="30sp"
                android:textColor="@color/white"/>


        </LinearLayout>

        <!-- Spacer View -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/equal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_background"
                android:text="="
                android:textSize="30sp"
                android:textColor="@color/white"/>

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/zero"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_background"
                android:text="0"
                android:textSize="30sp"
                android:textColor="@color/white"/>

            <Space
                android:layout_width="16dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/cut"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_background"
                android:src="@drawable/baseline_backspace_24"
                 />

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/divide"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_background"
                android:text="/"
                android:textSize="30sp"
                android:textColor="@color/white"/>


        </LinearLayout>

        <!-- Spacer View -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>